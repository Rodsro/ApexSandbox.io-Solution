public String registerStudent(String name, String phone, String email) {
    
    apxio__Student__c student = new apxio__Student__c();

    student.Name = name;
    student.apxio__Email__c = email;
    student.apxio__Phone__c = phone;

    List<apxio__Student__c> students = [SELECT Id, apxio__Registration_Number__c FROM apxio__Student__c ORDER BY apxio__Registration_Number__c DESC LIMIT 1];
    
    insert student;

    return student.apxio__Registration_Number__c;
}