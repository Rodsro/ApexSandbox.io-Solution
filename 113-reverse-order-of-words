public String reverseWordsInASentence(String sentence){

    String resultado = '';

    List<String> listaPalavras = sentence.split('[\\ ]');

    for(SInteger i = listaPalavras.size() - 1; i >= 0; i--){
        resultado += itens[i];
        if (i > 0) {
            resultado =+ ' ';
        }
    }

    return resultado;
}
