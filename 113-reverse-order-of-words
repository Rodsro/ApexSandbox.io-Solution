public String reverseWordsInASentence(String sentence){

    String resultado = '';

    List<String> listaPalavras = sentence.split('[\\ ]');

    for(Integer i = listaPalavras.size() - 1; i >= 0; i--){
        resultado += sentence[i];
        if (i > 0) {
            resultado += ' ';
        }
    }

    return resultado;
}
